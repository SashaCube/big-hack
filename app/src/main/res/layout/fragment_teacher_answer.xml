<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:background="@color/wight"
              android:layout_height="match_parent">

    <TextView
            android:id="@+id/tv_label"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center"
            android:padding="20dp"
            android:text="Оцінити Відповідь"
            android:textSize="20sp"/>

    <View android:layout_width="match_parent"
          android:layout_height="1dp"
          android:background="@color/colorPrimary"/>


    <TextView
            android:id="@+id/tv_task_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:textSize="20sp"
            android:text="Назва Завдання"/>

    <TextView
            android:padding="20dp"
            android:textSize="20sp"
            android:id="@+id/tv_task_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Зміст Завдання"/>

    <TextView
            android:padding="20dp"
            android:textSize="20sp"
            android:id="@+id/tv_answer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Відповідь До Завдання"/>

    <TextView
            android:padding="20dp"
            android:textSize="15sp"
            android:id="@+id/tv_mark_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ваша Оцінка"/>

    <EditText
            android:id="@+id/ed_mark"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center"
            android:padding="20dp"
            android:hint="100"
            android:textSize="20sp"/>
    <TextView
            android:id="@+id/tv_send_task"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@color/colorPrimary"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:text="ГОТОВО"
            android:textSize="20sp"/>

</LinearLayout>